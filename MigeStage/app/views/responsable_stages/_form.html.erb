<%= form_with model: responsable_stage, remote: true, local: false do |f| %>

  <div class="mb-3">
    <%= f.label :nom, class: 'form-label' %>
    <%= f.text_field :nom, class: 'form-control' %>

    <% responsable_stage.errors.full_messages_for(:nom).each do |message| %>
      <div class="text-danger" style="font-size: small"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :prenom, 'PrÃ©nom', class: 'form-label' %>
    <%= f.text_field :prenom, class: 'form-control' %>

    <% responsable_stage.errors.full_messages_for(:prenom).each do |message| %>
      <div class="text-danger" style="font-size: small"><%= message %></div>
    <% end %>
  </div>


  <div class="mb-3">
    <%= f.label :email, class: 'form-label' %><br>
    <%= f.text_field :email, class: 'form-control' %>

    <% responsable_stage.errors.full_messages_for(:email).each do |message| %>
      <div class="text-danger" style="font-size: small"><%= message %></div>
    <% end %>
  </div>

  <div class="actions d-flex justify-content-end">
    <%= link_to "Annuler", responsable_stage_path, class: "btn btn-outline-primary me-2"%>
