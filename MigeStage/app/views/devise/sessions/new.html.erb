<div class="bandeauSuperieur d-flex justify-content-center">
  <span class="mx-4 uppercase font-bold">Connexion</span>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-3">
    <%= f.label :email, class: 'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= f.label :password, 'Mot de passe', class: 'form-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Se souvenir de moi' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Se connecter", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/link" %>
