<%= form_with url:  transfert_formation_path, scope: 'post', remote: true, local: false do |f| %>
  <div class="d-flex">
    <h5 class="my-auto"><%= formation.name_with_initial %> <%= fa_icon "arrow-right", class: 'fa-sm text-primary mx-2' %> </h5>

    <%= f.collection_select :next_formation, formations, :id, :name_with_initial, {}, class: 'form-select', style: "width: 350px" %>
  </div>


  <table class="table">
    <thead>
    <tr>
      <th scope="col"> NOM Prénom</th>
    </tr>
    </thead>
    <tbody>
    <%= f.collection_check_boxes :etudiant_ids, Etudiant.all, :id, :name_with_initial do |b| %>
      <tr>
        <%= b.label(class: 'form-check-label') do %>
        <th scope="row">
          <%= b.check_box(checked: true, class: 'form-check-input me-2', ) + b.text %>
        </th>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>


  <div class="d-flex justify-content-end">
    <%= link_to "Annuler", promotion_path(formation.promotion_id), class: "btn btn-outline-primary me-2" %>
    <%= f.submit 'Transférer', class: 'btn btn-primary' %>
  </div>
<% end %>