<%= form_with model: promotion, remote: true, local: false do |f| %>
  <div class="mb-3">
    <%= f.label :annee, class: 'form-label' %>
    <%= f.text_field :annee, maxlength: 4, class: 'form-control' %>

    <% promotion.errors.full_messages_for(:annee).each do |message| %>
      <div class="text-danger" style="font-size: small"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">

  </div>

  <div class="d-flex justify-content-end">
    <%= link_to "Annuler", promotions_path, class: "btn btn-outline-primary me-2"%>
    <%= f.submit 'Enregistrer', class: 'btn btn-primary' %>
  </div>
<% end %>