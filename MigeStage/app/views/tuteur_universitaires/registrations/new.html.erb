<h2>Inscription tuteur universitaire</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "tuteur_universitaires/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-12 col-sm-6">
      <div class="field mb-3">
        <%= f.label :email, 'Email', class: 'form-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'%>
      </div>

      <div class="field mb-3">
        <%= f.label :password, 'Mot de passe', class: 'form-label' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caractères minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, 'Confirmation du mot de passe', class: 'form-label'%><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>
    </div>

    <div class="col-12 col-sm-6">
      <div class="mb-3">
        <%= f.label :nom, 'Non ', class: 'form-label'%><br>
        <%= f.text_field :nom, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :prenom, 'Prénom', class: 'form-label' %><br>
        <%= f.text_field :prenom, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :alias, 'Alias', class: 'form-label' %><br>
        <%= f.text_field :alias, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :fonction,'Fonction', class: 'form-label' %><br>
        <%= f.text_field :fonction, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :localisation,'Localisation', class: 'form-label' %><br>
        <%= f.text_field :localisation, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :statut_encadrant, 'Statut encadrant', class: 'form-label' %><br>
        <%= f.select :statut_encadrant, TuteurUniversitaire.statut_encadrants.keys, {}, { class: 'form-select' } %>
      </div>
    </div>
  </div>

  <div class="actions d-flex justify-content-end mb-5">
    <%= f.submit "Inscription", class: 'btn btn-primary' %>
  </div>
<% end %>

