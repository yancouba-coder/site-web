<div class="bandeauSuperieur d-flex justify-content-center">
  <span class="mx-4 uppercase font-bold">Connexion</span>
</div>
<div class="card-body p-2 table-responsive">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="field mb-3">
      <%= f.label :password, 'Mot de passe', class: 'form-label' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, 'Se souvenir de moi', class: "form-check-label" %>
      </div>
    <% end %>

    <div class="actions mb-5">
      <%= f.submit "Se connecter", class: 'btn btn-primary' %>
    </div>
  <% end %>
  <%= render "tuteur_universitaires/shared/links" %>
</div>

